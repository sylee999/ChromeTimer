{
    "name": "Chrome timer",
    "version": "0.1",
    "description": "Simple timer",
    "permissions": [
        "fontSettings",
        "tts",
        "tabs"
    ],

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "browser_action": {
        "default_icon": "img/ChromeTimer19.png",
        "default_title": "Chrome timer"
    },

    "options_page": "options.html",

    "minimum_chrome_version": "14",

    "icons": {
        "16": "img/ChromeTimer16.png",
        "48": "img/ChromeTimer48.png",
        "128": "img/ChromeTimer128.png",
        "256": "img/ChromeTimer256.png"
    },

    "manifest_version": 2
}
